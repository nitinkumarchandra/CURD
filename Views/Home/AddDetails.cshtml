@model Crud_Application.Models.MainStudentModel

@{
    ViewBag.Title = "AddDetails";
}

<h2>Add Students Details</h2>

@using (Html.BeginForm("AddDetails", "Home", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id);

    <div class="form-group">
        <label>Your Full Name</label>
        @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Name, "", new {@class = "clr"})
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Email, "", new {@class = "clr"})
    </div>
    <div class="form-group">
        <label>Gender</label>
        @Html.TextBoxFor(m => m.Gender, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Gender, "", new {@class = "clr"})
    </div>
    <div class="form-group">
        <label>Age</label>
        @Html.TextBoxFor(m => m.Age, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Age, "", new {@class = "clr"})
    </div>
    <div class="form-group">
        <label>Address</label>
        @Html.TextBoxFor(m => m.Address, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Address, "", new {@class = "clr"})
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
}
