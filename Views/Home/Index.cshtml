@model List<Crud_Application.Models.MainStudentModel>

@{
    ViewBag.Title = "Home Page";
}

<br />
<table class="table table-responsive table-bordered table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Age</th>
        <th>Address</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Gender</td>
            <td>@item.Age</td>
            <td>@item.Address</td>

            <td> <a href="@Url.Action("Edit", "Home", new {item.Id})" class="btn btn-success">Edit</a></td>
            <td> <a href="@Url.Action("Delete", "Home", new {item.Id})" class="btn btn-danger">Delete</a></td>
        </tr>
    }
</table>